         jmp play_next_sample

         .data

.align $100
_play_sample:
         sta ptr1
         stx ptr1+1
         php
         sei
         ldy #$00
                                     ; Y=0    Y!=0
:        nop                         ; 2             Compensate when we don't inc ptr1+1
         nop                         ; 4
         bit $FF                     ; 7
:        lda (ptr1),y                ; 12     4
         bmi play_out                ; 14     6      Considered not taken

         tax                         ; 16     8
         jmp (sound_levels-$32,x)    ; 25     17      (6 + jmp back)
play_next_sample:
         iny                         ; 27     19
         bne :--                     ; 29     21
         inc ptr1+1                  ;        26
         bra :-                      ;        29
play_out:
         plp
         rts
