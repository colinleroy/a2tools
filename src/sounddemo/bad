         jsr waste_12     ; 12 - rem 0
         jsr waste_22
sound_level_22_1:
         sta $C030        ; 4 - rem 38
         jsr waste_22     ; 22 - rem 16
         sta $C030        ; 4 - rem 12
         jsr waste_12     ; 12 - rem 0
         jsr waste_22
sound_level_22_2:
         sta $C030        ; 4 - rem 38
         jsr waste_22     ; 22 - rem 16
         sta $C030        ; 4 - rem 12
         jsr waste_12     ; 12 - rem 0
         jsr waste_22
sound_level_22_3:
         sta $C030        ; 4 - rem 38
         jsr waste_22     ; 22 - rem 16
         sta $C030        ; 4 - rem 12
         nop              ; 2 - rem 10
         nop              ; 2 - rem 8
         nop              ; 2 - rem 6
         jmp play_next_sample

sound_level_23_0:
         sta $C030        ; 4 - rem 38
         jsr waste_20     ; 20 - rem 18
         bit $FF          ; 3 - rem 15
         sta $BFD0,x      ; 5 - rem 10
         nop              ; 2 - rem 8
         nop              ; 2 - rem 6
         nop              ; 2 - rem 4
         nop              ; 2 - rem 2
         nop              ; 2 - rem 0
         jsr waste_22
